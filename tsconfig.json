{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2015",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "dom"
    ]
  },
  "include": [
    "src",
    "config/typings"
  ]
}